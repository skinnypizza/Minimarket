<%- include('partials/header') %>
<main class="dashboard admin">
    <h2>Editar Producto</h2>
    <div class="dashboard-content">
        <section class="edit-product">
            <form action="/products/<%= product.id %>/update" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="name">Nombre</label>
                    <input id="name" name="name" required value="<%= product.name %>" />
                </div>
                <div>
                    <label for="description">Descripci√≥n</label>
                    <input id="description" name="description" value="<%= product.description %>" />
                </div>
                <div>
                    <label for="price">Precio</label>
                    <input id="price" name="price" type="number" step="0.01" value="<%= product.price %>" />
                </div>
                <div>
                    <label for="stock">Stock</label>
                    <input id="stock" name="stock" type="number" value="<%= product.stock %>" />
                </div>
                <div>
                    <label for="image">Nueva Imagen (opcional)</label>
                    <input id="image" name="image" type="file" accept="image/*" />
                    <% if (product.image) { %>
                        <small>Imagen actual: <a href="<%= product.image %>" target="_blank">Ver</a></small>
                    <% } %>
                </div>
                <button class="btn" type="submit">Guardar Cambios</button>
                <a href="/dashboard" class="btn btn-cancel">Cancelar</a>
            </form>
        </section>
    </div>
</main>
<%- include('partials/footer') %>