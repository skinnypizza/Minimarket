<div class="cart-container">
    <h2 class="cart-title">Detalle de Venta</h2>
    
    <div class="cart-items-table-wrapper">
        <table class="cart-items-table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody id="cart-items-body">
                <!-- Las filas del carrito se insertarán aquí dinámicamente -->
                <tr id="empty-cart-row">
                    <td colspan="5">El carrito está vacío</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="cart-summary">
        <div class="summary-row">
            <span>Subtotal:</span>
            <span id="cart-subtotal">Bs. 0.00</span>
        </div>
        <div class="summary-row">
            <span>IVA (0%):</span>
            <span id="cart-tax">Bs. 0.00</span>
        </div>
        <div class="summary-row total">
            <span>Total a Pagar:</span>
            <span id="cart-total">Bs. 0.00</span>
        </div>
    </div>

    <div class="payment-section">
        <div class="payment-row">
            <label for="cash-received">Efectivo Recibido (Bs.):</label>
            <input type="number" id="cash-received" placeholder="0.00" min="0" step="0.10">
        </div>
        <div class="payment-row change">
            <span>Cambio:</span>
            <span id="change-due">Bs. 0.00</span>
        </div>
    </div>

    <div class="cart-actions">
        <button id="cancel-sale-btn" class="btn btn-danger">
            <i class="fas fa-times-circle"></i> Cancelar Venta
        </button>
        <button id="confirm-sale-btn" class="btn btn-success" disabled>
            <i class="fas fa-check-circle"></i> Confirmar Venta
        </button>
    </div>

    <!-- Modal de confirmación de venta -->
    <div id="sale-success-modal" class="modal-overlay" style="display: none;">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <i class="fas fa-check-circle success-icon"></i>
            <h2>Venta Registrada con Éxito</h2>
            <p>La venta se ha completado y el stock ha sido actualizado.</p>
            <p><strong>Total Venta:</strong> <span id="modal-total"></span></p>
            <p><strong>Cambio Entregado:</strong> <span id="modal-change"></span></p>
            <button id="new-sale-btn" class="btn btn-primary">Nueva Venta</button>
        </div>
    </div>
</div>