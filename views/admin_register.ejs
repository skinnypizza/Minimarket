<%- include('partials/header') %>
<main class="login">
    <div class="form-container">
        <h2>Crear Administrador</h2>
        <p style="color: #666; margin-bottom: 1.5rem; text-align: center;">
            Solo los administradores pueden crear otros administradores
        </p>
        <form action="/auth/admin/register" method="POST">
            <div class="form-group">
                <label for="name">Nombre del Administrador</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Crear Administrador</button>
        </form>
        <p style="margin-top:1rem; text-align:center;">
            <a href="/dashboard">← Volver al Dashboard</a>
        </p>
    </div>
</main>
<%- include('partials/footer') %>
